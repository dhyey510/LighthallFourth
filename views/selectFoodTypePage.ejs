<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lighthall</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css
    "
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-dark px-5">
      <div class="container-fluid">
        <a class="navbar-brand text-white fw-bold" href="#">T53</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-2">
              <a class="nav-link active text-white" aria-current="page" href="/"
                >Home</a
              >
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link text-secondary" aria-current="page" href="/logout"
                >Logout</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- main container -->
    <div class="container mt-5">
      <!-- <h3>Select 5 Cuisines</h3> -->
      <form action= '/<%= username%>/submit' method="post" class="Cuisines my-5">
        <div class="navigation d-flex justify-content-between mb-4">
            <h3><%= username %>!! Your turn select 5 cuisines</h3>
            <button type="submit" class="btn btn-primary" id="nextBtn" disabled>Next ></button>
          </div>
        <div class="row row-cols-3">
        <% for(let i=0; i<allCuisines.length; i++){ %>
          <div class="col">
            <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src='<%= allCuisines[i].imgUrl %>' class="img-fluid rounded-start" alt="<%= allCuisines[i].name%>" style="height: 100px; width: 100px;">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= allCuisines[i].name %> Cuisine</h5>
                      <input type="checkbox" class="btn-check" id='<%= allCuisines[i].name %>' value='<%= allCuisines[i].name %>' autocomplete="off" name="selectedCuisines">
                      <label class="btn btn-outline-dark" for='<%= allCuisines[i].name %>'>Select</label>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        <% } %>
        </div>
    </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
    <script>
        $("input:checkbox").click(function() {
            var bol = $("input:checkbox:checked").length >= 5;     
            $("input:checkbox").not(":checked").attr("disabled",bol);
            if(bol){
              $("#nextBtn").removeAttr("disabled");
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js
    "></script>
  </body>
</html>
