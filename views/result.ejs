<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lighthall</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css
    "
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-dark px-5">
      <div class="container-fluid">
        <a class="navbar-brand text-white fw-bold" href="#">T53</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-2">
              <a class="nav-link active text-white" aria-current="page" href="/"
                >Home</a
              >
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link text-secondary" aria-current="page" href="/logout"
                >Logout</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- main container -->
    <div class="container mt-5">
     <% if(commonRestaurants.length > 0) { %>
      <h3>You both prefer these Restaurants</h3>
      <div class="restaurant my-5">
        <div class="row row-cols-4">
        <% for(let i=0; i<commonRestaurants.length; i++){ %>
          <div class="col">
            <div class="card my-3">
              <img src='<%= commonRestaurants[i].image_url%>' class="card-img-top" style="height: 200px;"/>
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= commonRestaurants[i].name %></h5>
                <p class="card-text">
                    <div class="location">
                        <i class="bi bi-geo-fill"></i>
                        <span><%= commonRestaurants[i].location.city %>, <%= commonRestaurants[i].location.state%></span>
                    </div>
                    <div class="rating">
                        <% for(let j=0; j<parseInt(commonRestaurants[i].rating,10); j++){ %>
                        <i class="bi bi-star-fill"></i>
                        <% } %>
                        <span><%= parseInt(commonRestaurants[i].rating,10) %></span>
                    </div>
                </p>
                <a href="<%= commonRestaurants[i].url %>" class="btn btn-primary">See Details</a>
              </div>
            </div>
          </div>
        <% } %>
        </div>
     </div>
     <% } %>

     <% if(commonFoodRestaurants.length >0){ %>
     <h3>Restaurants in which you both get your selected cuisines</h3>
      <div class="restaurant my-5">
        <div class="row row-cols-4">
        <% for(let i=0; i<commonFoodRestaurants.length; i++){ %>
          <div class="col">
            <div class="card my-3">
              <img src='<%= commonFoodRestaurants[i].image_url%>' class="card-img-top" style="height: 200px;"/>
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= commonFoodRestaurants[i].name %></h5>
                <p class="card-text">
                    <div class="location">
                        <i class="bi bi-geo-fill"></i>
                        <span><%= commonFoodRestaurants[i].location.city %>, <%= commonFoodRestaurants[i].location.state%></span>
                    </div>
                    <div class="rating">
                        <% for(let j=0; j<parseInt(commonFoodRestaurants[i].rating,10); j++){ %>
                        <i class="bi bi-star-fill"></i>
                        <% } %>
                        <span><%= parseInt(commonFoodRestaurants[i].rating,10) %></span>
                    </div>
                </p>
                <a href="<%= commonFoodRestaurants[i].url %>" class="btn btn-primary">See Details</a>
              </div>
            </div>
          </div>
        <% } %>
        </div>
     </div>
     <% } %>

     <% if(commonFoodRestaurants.length == 0 && commonRestaurants.length ==0){ %>
      <h3>Sorry!! Unfortunately we can't find any similar choice restaurants for you</h3>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js
    "></script>
  </body>
</html>
